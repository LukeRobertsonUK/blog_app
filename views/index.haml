- if @recent_posts.any?
  %h2 Previous five posts
  - @recent_posts.each do |blog|
    %ul
      %a{href:"/display/#{blog["id"]}"}
        = blog['title']
      %li.post
        .heading Date & Time:
        = blog['post_time'].to_s.slice(0, 19)
      %li
        .heading Extract:
        .extract
          = blog['content'].slice(0, 100) + "..."
      %li.post
        .heading Tags:
        = blog['tags'].split(" ").join(" / ")
- else
  %h2 There are no posts available at this time
